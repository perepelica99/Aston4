<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <com.example.clock.Clock
        android:id="@+id/clock_view"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mCircleColor="@android:color/black"
        app:mClockRingWidth="10dp"
        app:mDefaultLength="0dp"
        app:mDefaultWidth="1dp"
        app:mHColor="@color/black"
        app:mHWidth="10dp"
        app:mMColor="@color/holo_red_dark"
        app:mMWidth="8dp"
        app:mNumColor="@color/black"
        app:mSColor="@color/holo_blue_dark"
        app:mSWidth="5dp"
        app:mSpecialLength="20dp"
        app:mSpecialWidth="10dp"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>